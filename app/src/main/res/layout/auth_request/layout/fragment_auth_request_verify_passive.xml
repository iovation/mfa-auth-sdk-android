<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/ioa_theme_layouts_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.launchkey.android.authenticator.sdk.ui.internal.view.DynamicThemeImageView
        android:id="@+id/toinclude_launch_waiting_customspinner"
        android:layout_width="@dimen/lk_launch_waiting_spinner_dimension"
        android:layout_height="@dimen/lk_launch_waiting_spinner_dimension"
        android:layout_gravity="center"
        android:src="@drawable/lk_launch_checking_spinner_custom"
        android:scaleType="fitCenter"
        android:padding="@dimen/lk_spacing_s" />

    <com.launchkey.android.authenticator.sdk.ui.internal.view.DynamicThemeImageView
        android:id="@+id/toinclude_launch_waiting_image"
        android:layout_width="@dimen/lk_launch_waiting_icon_dimension"
        android:layout_height="@dimen/lk_launch_waiting_icon_dimension"
        android:layout_gravity="center"
        tools:src="@drawable/ic_fingerprint_black_512px"
        android:scaleType="fitCenter"
        android:padding="@dimen/lk_spacing_s" />
</FrameLayout>