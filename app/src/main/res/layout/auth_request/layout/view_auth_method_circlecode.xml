<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/lk_spacing_s"
    android:orientation="vertical"
    android:gravity="center">

    <com.launchkey.android.authenticator.sdk.ui.internal.view.DynamicThemeFittingTextView
        android:id="@+id/view_auth_method_circlecode_viewer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lk_pad_error_height"
        android:gravity="center_horizontal|top"
        android:textColor="@android:color/black"
        android:alpha="0.6"
        style="@style/TextAppearance.AppCompat.Large" />

    <com.launchkey.android.authenticator.sdk.ui.internal.auth_method.circle_code.CircleCodeView
        android:id="@+id/view_auth_method_circlecode_widget"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="40dp"
        android:paddingEnd="0dp" />
</LinearLayout>