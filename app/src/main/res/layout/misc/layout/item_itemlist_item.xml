<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lk_security_list_avail_item_height"
    android:orientation="horizontal"
    android:padding="@dimen/lk_security_list_avail_item_spacing_outter"
    >

    <ImageView
        android:id="@+id/itemlist_image"
        android:layout_width="@dimen/lk_security_list_avail_item_icon_size"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:scaleType="centerInside"
        android:tint="@color/lk_gray_icons"
        tools:src="@drawable/ic_clear_black_24dp"
        />

    <androidx.legacy.widget.Space
        android:layout_width="@dimen/lk_security_list_avail_item_spacing_inner"
        android:layout_height="0dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        >

        <TextView
            android:id="@+id/itemlist_text_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:textSize="@dimen/lk_security_list_avail_item_name_size"
            android:textColor="@color/lk_gray_icons"
            tools:text="Main Item Label"
            />

        <TextView
            android:id="@+id/itemlist_text_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:textAlignment="viewStart"
            android:paddingTop="@dimen/lk_security_list_avail_item_spacing_inner"
            android:textSize="@dimen/lk_security_list_avail_item_desc_size"
            android:textColor="@color/lk_gray_light"
            tools:text="Description of the item"
            />
    </LinearLayout>
</LinearLayout>