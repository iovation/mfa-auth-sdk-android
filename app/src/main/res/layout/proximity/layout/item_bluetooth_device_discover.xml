<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@color/lk_backgrounds_touchable"
    tools:theme="@style/AuthenticatorTheme">

    <ImageView
        android:id="@+id/bluetooth_image_icon"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="?attr/authenticatorFactorBluetoothIcon"
        android:scaleType="fitCenter"
        android:padding="12dp"
        android:layout_alignParentStart="true"
        app:tint="@color/lk_wl_default_list_item_icons" />

    <TextView
        android:id="@+id/bluetooth_text_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="?attr/authenticatorColorPrimaryDark"
        tools:text="Bt Device"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/bluetooth_image_icon"
        android:gravity="start"
        android:textAlignment="viewStart" />
</RelativeLayout>