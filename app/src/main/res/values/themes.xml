<resources>
    <style name="AuthenticatorTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="authenticatorColorPrimary">@color/lk_wl_default_primary</item>
        <item name="authenticatorColorPrimaryDark">@color/lk_wl_default_primaryDark</item>
